<h1>Create your task!</h1>
<h2>Do it now!!</h2>

<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :completed %>
  <%= f.select :completed, [['Pending', false], ['Completed', true] ] %>
  <%= f.submit %>
<% end %>
